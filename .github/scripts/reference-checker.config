# Reference Checker Configuration
# Patterns to exclude from reference checking (false positives)

# JavaScript Regex Patterns (in code examples)
EXCLUDE_REGEX_PATTERNS=(
    "\/.*\/g"           # JavaScript global regex: /pattern/g
    "\/.*\/gi"          # Case-insensitive regex: /pattern/gi
    "\/.*\/gm"          # Multiline regex: /pattern/gm
    "\.replace\(\/"     # String replacement: .replace(/pattern/g, ...)
    "\.match\(\/"       # String matching: .match(/pattern/)
    "\.test\(\/"        # Regex testing: /pattern/.test(...)
)

# Code Comment Placeholders
EXCLUDE_COMMENT_PATTERNS=(
    "\/\* \.\.\. \*\/"  # Code omitted: /* ... */
    "\/\/ \.\.\."       # Line comment: // ...
    "\/\*\*.*\*\/"      # JSDoc comments
)

# Path Descriptions (not actual references)
EXCLUDE_DESCRIPTION_PATTERNS=(
    "\/[a-z]+ for "     # Descriptive text: "/src for library organization"
    "\/[a-z]+ in "      # Descriptive text: "/docs in repository"
    "\/[a-z]+ contains" # Descriptive text: "/tests contains unit tests"
)

# JSDoc and Code Patterns
EXCLUDE_CODE_PATTERNS=(
    "\/@param"          # JSDoc parameter
    "\/@returns"        # JSDoc return value
    "\/@throws"         # JSDoc exception
    "\/@type"           # JSDoc type annotation
    "\/throw new"       # Error throwing
    "\/async function"  # Async functions
    "\/function"        # Function declarations
    "\/const "          # Constant declarations
    "\/let "            # Variable declarations
)

# Markdown Code Blocks (context-based exclusions)
EXCLUDE_CONTEXTS=(
    "```javascript"     # JavaScript code blocks
    "```js"             # JS code blocks (short form)
    "```bash"           # Bash script blocks
    "```regex"          # Regex pattern examples
    "```json"           # JSON data blocks
)

# URL Patterns (always valid)
EXCLUDE_URL_PATTERNS=(
    "http://"           # HTTP URLs
    "https://"          # HTTPS URLs
    "ftp://"            # FTP URLs
    "file://"           # File protocol
)

# Special Characters (anchor links, etc.)
EXCLUDE_SPECIAL_PATTERNS=(
    "#"                 # Anchor links within same file
    "mailto:"           # Email links
    "tel:"              # Phone number links
)

# Directories to exclude from scanning
EXCLUDE_DIRECTORIES=(
    "node_modules"
    ".git"
    ".ai_workflow"
    "coverage"
    ".jest-cache"
    "venv"
    ".husky"
)

# File extensions to scan
SCAN_EXTENSIONS=(
    ".md"               # Markdown files
    ".txt"              # Text files
    ".js"               # JavaScript (for JSDoc)
)
